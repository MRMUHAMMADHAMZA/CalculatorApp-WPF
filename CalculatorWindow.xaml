<Window x:Class="CalculatorApp_WPF.CalculatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CalculatorApp"
        Height="500" Width="400"
        MinHeight="450" MinWidth="350"
        WindowStartupLocation="CenterScreen"
        Background="#1e1e1e">

    <!-- Styles -->
    <Window.Resources>
        <!-- Default Number Button -->
        <Style x:Key="CalcBtn" TargetType="Button">
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="Background" Value="#333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="0" BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#444"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#555"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Operator Buttons (+, -, ×, ÷) -->
        <Style x:Key="OpBtn" TargetType="Button" BasedOn="{StaticResource CalcBtn}">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="0" BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#008CFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#005EA6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Function Buttons (C, .) -->
        <Style x:Key="FuncBtn" TargetType="Button" BasedOn="{StaticResource CalcBtn}">
            <Setter Property="Background" Value="#555"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="0" BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#666"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#777"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Equals Button -->
        <Style x:Key="EqualBtn" TargetType="Button">
            <Setter Property="FontSize" Value="26"/>
            <Setter Property="Background" Value="#28a745"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="70"/>
            <Setter Property="Margin" Value="5,5,5,15"/>
            <Setter Property="ClipToBounds" Value="False"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="0" BorderThickness="1" Padding="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#34c759"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1e7e34"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Display -->
        <TextBox x:Name="txtDisplay"
                 Grid.Row="0"
                 FontSize="32"
                 Height="80"
                 VerticalContentAlignment="Center"
                 HorizontalContentAlignment="Right"
                 Margin="10,25,10,10"
                 Padding="0,0,5,0"
                 IsReadOnly="True"
                 Text="0"
                 Background="#2d2d30"
                 Foreground="White"
                 BorderBrush="#444"
                 BorderThickness="1"
                 FontWeight="Bold"/>

        <!-- Buttons Grid -->
        <Grid Grid.Row="1" Margin="10,10,10,10" ClipToBounds="False">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="1.3*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Row 0 -->
            <Button Grid.Row="0" Grid.Column="0" Content="7" Style="{StaticResource CalcBtn}" Click="Number_Click"/>
            <Button Grid.Row="0" Grid.Column="1" Content="8" Style="{StaticResource CalcBtn}" Click="Number_Click"/>
            <Button Grid.Row="0" Grid.Column="2" Content="9" Style="{StaticResource CalcBtn}" Click="Number_Click"/>
            <Button Grid.Row="0" Grid.Column="3" Content="÷" Style="{StaticResource OpBtn}" Click="Operator_Click"/>

            <!-- Row 1 -->
            <Button Grid.Row="1" Grid.Column="0" Content="4" Style="{StaticResource CalcBtn}" Click="Number_Click"/>
            <Button Grid.Row="1" Grid.Column="1" Content="5" Style="{StaticResource CalcBtn}" Click="Number_Click"/>
            <Button Grid.Row="1" Grid.Column="2" Content="6" Style="{StaticResource CalcBtn}" Click="Number_Click"/>
            <Button Grid.Row="1" Grid.Column="3" Content="×" Style="{StaticResource OpBtn}" Click="Operator_Click"/>

            <!-- Row 2 -->
            <Button Grid.Row="2" Grid.Column="0" Content="1" Style="{StaticResource CalcBtn}" Click="Number_Click"/>
            <Button Grid.Row="2" Grid.Column="1" Content="2" Style="{StaticResource CalcBtn}" Click="Number_Click"/>
            <Button Grid.Row="2" Grid.Column="2" Content="3" Style="{StaticResource CalcBtn}" Click="Number_Click"/>
            <Button Grid.Row="2" Grid.Column="3" Content="-" Style="{StaticResource OpBtn}" Click="Operator_Click"/>

            <!-- Row 3 -->
            <Button Grid.Row="3" Grid.Column="0" Content="0" Style="{StaticResource CalcBtn}" Click="Number_Click"/>
            <Button Grid.Row="3" Grid.Column="1" Content="." Style="{StaticResource CalcBtn}" Click="Number_Click"/>
            <Button Grid.Row="3" Grid.Column="2" Content="C" Style="{StaticResource FuncBtn}" Click="Clear_Click"/>
            <Button Grid.Row="3" Grid.Column="3" Content="+" Style="{StaticResource OpBtn}" Click="Operator_Click"/>

            <!-- Row 4 -->
            <Button Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="4"
                    Content="=" Style="{StaticResource EqualBtn}" Click="Equals_Click" ClipToBounds="False"/>
        </Grid>
    </Grid>
</Window>
